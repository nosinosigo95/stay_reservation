<h2>予約済み一覧</h2>
<table class="reserved_list">
    <thead>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>合計料金</th>
        <th>チェックイン</th>
        <th>チェックアウト</th>
        <th>予約確定日時</th>
    </thead>
    <tbody>
        <% @reservations.each do |reservation| %>
            <tr>
                <td><%= image_tag reservation.room.image, class: :table_image %></td>
                <td><%= link_to reservation.room.facility_name, show_rooms_path(reservation.room) %></td>
                <td><%= reservation.room.introduction %></td>
                <td><%= reservation.total_prices %></td>
                <td><%= reservation.check_in_date.strftime("%Y/%m/%d") %></td>
                <td><%= reservation.check_out_date.strftime("%Y/%m/%d") %></td>
                <td><%= reservation.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            </tr>
        <% end %>
    </tbody>
</table>