<header>
    <nav class="header-nav">
        <h1 class="left">Potepan share</h1>
        <div class="right">
            <% if logged_in? %>
                <a class="drop_wrap" href="#">
                    <%= image_tag @user.image, class: :header_icon if !@user.image.nil?  %>
                    <p class="user_name"><%= @user.name %></p>
                </a>
            <% else %>
                <%= link_to "ログイン", log_in_path %>
                <%= link_to "新規登録", sign_up_path %>
            <% end %>
            <% if logged_in? %>
                <ul class="drop_menu">
                    <li><%= link_to "施設の新規登録", new_rooms_path %></li>
                    <li><%= link_to "予約済み一覧", index_reservations_path %></li>
                    <li><%= link_to "アカウント設定", users_account_path %></li>
                    <li><%= link_to "ログアウト", sign_out_path, method: :delete %></li>
                </ul>
            <% end %>
        </div>
    </nav>
</header>
